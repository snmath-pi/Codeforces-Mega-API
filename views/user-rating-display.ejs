<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Rating Changes</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        padding: 20px; /* Added padding to prevent content cut-off */
      }

      .container {
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 1200px;
        overflow-x: auto;
      }

      .container h1 {
        margin: 0 0 20px 0;
        font-size: 28px;
        color: #333;
        padding-bottom: 10px;
        border-bottom: 2px solid #0288d1;
      }

      .styled-table {
        border-collapse: collapse;
        width: 100%;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        font-size: 0.9em;
        font-family: sans-serif;
        margin-top: 20px;
      }

      .styled-table thead tr {
        background-color: #009879;
        color: #ffffff;
        text-align: left;
      }

      .styled-table th,
      .styled-table td {
        padding: 12px 15px;
        border: 1px solid #ddd;
      }

      .styled-table tbody tr {
        border-bottom: 1px solid #dddddd;
      }

      .styled-table tbody tr:nth-of-type(even) {
        background-color: #f3f3f3;
      }

      .styled-table tbody tr:last-of-type {
        border-bottom: 2px solid #009879;
      }

      .styled-table tbody tr.active-row {
        font-weight: bold;
        color: #009879;
      }

      .styled-table tbody tr:hover {
        background-color: #e0f7fa;
      }

      .link-container {
        margin-top: 20px;
        display: flex;
        justify-content: center; /* Center the content horizontally */
      }

      .link-container a {
        color: #0288d1;
        text-decoration: none;
        font-size: 16px;
        display: inline-block;
        padding: 10px 20px;
        border-radius: 5px;
        background-color: #f0f0f0;
        transition: background-color 0.3s, color 0.3s;
        margin: 0 10px; /* Add some space between the links */
      }
      .link-container a:hover {
        background-color: #0288d1;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <% if (ratingChanges && ratingChanges.length > 0) { %>
      <h1><%= user %>'s Recent Rating Changes</h1>
      <table class="styled-table">
        <thead>
          <tr>
            <th>Sn. No.</th>
            <th>Contest ID</th>
            <th>Contest Name</th>
            <th>Handle</th>
            <th>Rank</th>
            <th>Rating Update Time</th>
            <th>Old Rating</th>
            <th>New Rating</th>
          </tr>
        </thead>
        <tbody>
          <% ratingChanges.forEach(function(change, index) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= change.contestId %></td>
            <td><%= change.contestName %></td>
            <td><%= change.handle %></td>
            <td><%= change.rank %></td>
            <td>
              <%= new Date(change.ratingUpdateTimeSeconds *
              1000).toLocaleString() %>
            </td>
            <td><%= change.oldRating %></td>
            <td><%= change.newRating %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else { %>
      <h2>No rating changes found or an error occurred.</h2>
      <% } %>
      <div class="link-container">
        <a href="/">Back to Home Page</a>
      </div>
      <div class="link-container">
        <a href="/user-rating">Back to User Rating Page</a>
      </div>
    </div>
  </body>
</html>
